extends layout

block content
        style.
          .about-container {
            width: 700px;
            margin: 20px auto;
          }
          .about-box {
            color: #000;
            background-color: white;
            border-color: #d77900;
            font-size: 14px;
            font-weight: 400;
            border-radius: 20px;
            padding: 6px 12px;
            display: inline-block;
            margin-bottom: 0px;
            line-height: 1.42857;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -moz-user-select: none;
            background-image: none;
            border: 1px solid transparent;
            margin-top: 10px;
          }
          p.introduction-text {
            width: 320px;
            height:180px;
            border:hidden;
          }
          .picture-box {
            display: inline-block;
          }
        .about-container
           .about-box(style="width: 350px;")
