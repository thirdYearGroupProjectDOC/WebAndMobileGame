extends layout

block content
  style.
    .body-content {
      height: 90%;
    }
    footer {
      height: 8%;
    }
    .form-control {
      margin: 5px auto;
      width: 400px;
    }
  form(name="login", action="/login", method="post")
    input#login_usr(type="text", class="form-control", name="username", placeholder="Username")
    input#login_pss(type="password", class="form-control", name="password", placeholder="password")
    div(style="margin: 0 auto; display: table;")
      button#login_submit(type="submit", class='button', style="float:initial") Log In
