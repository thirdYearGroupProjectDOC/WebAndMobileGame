extends layout

block content
  h1= title
  p Welcome to #{title}
  h2 Welcome!  #{uname}
  h3 There are #{levelCount} levels
  <a href="/createLevel" class="btn btn-primary">Create my own level</a>
  <a href="/rank" class="btn btn-info">Go see the ranks</a>
  p ===
  form(name="selectLvls" action="/levels" method="post")
    <div class="lvls">
    .list-group
      a.list-group-item.active( href="/game?level=1" )
          h4.list-group-item-heading First Level
          p.list-group-item-text Some thing
      a.list-group-item( href="/game?level=2" )
          h4.list-group-item-heading Second Level
          p.list-group-item-text Some thing
      a.list-group-item( href="/game?level=3" )
          h4.list-group-item-heading Third Level
          p.list-group-item-text Some thing
      a.list-group-item( href="/game?level=4" )
          h4.list-group-item-heading Fourth Level
          p.list-group-item-text Some thing
